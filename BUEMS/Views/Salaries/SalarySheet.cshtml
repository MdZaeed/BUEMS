@model IEnumerable<BUEMS.Models.Salary>

@{
    ViewBag.Title = "SalarySheet";
}

<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

<h2>SalarySheet</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="salaryTable" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayableMainSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseRent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurriculumAssitanceAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssistantProctorAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeanAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalDutiesAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResearchAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelephoneAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Somonnoy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportationAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncomeTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RevenueStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSubtraction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeatSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name, new { style = "width:10px" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoiningDate)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.MainSalary)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.PayableMainSalary)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.HouseRent)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.MedicalAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.CurriculumAssitanceAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.AssistantProctorAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.DeanAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.AdditionalDutiesAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.ResearchAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.TelephoneAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Somonnoy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.GPF)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.BF)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.TransportationAllowance)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.IncomeTax)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.RevenueStamp, new { style = "width:50px" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSubtraction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NeatSalary)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SerialNo }, null) |
                    @Html.ActionLink("Details", "Individal", "SalaryGen", new { id = item.SerialNo }, null) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SerialNo })
                </td>
            </tr>
        }
    </tbody>
</table>



<script>
    $(document).ready(function () {
        $('#salaryTable').DataTable({
            "scrollX": true
        });
    });
</script>
