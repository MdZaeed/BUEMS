@model BUEMS.Models.Salary

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<script src="~/Scripts/angular.min.js"></script>

<!-- Wijmo -->
<link href="~/Scripts/wijmo.min.css" rel="stylesheet" />
<script src="~/Scripts/wijmo.min.js"></script>
<script src="~/Scripts/wijmo.input.min.js"></script>
<script src="~/Scripts/wijmo.angular.min.js"></script>
<div ng-app="service-app" ng-controller="appCtrl">
    <a class="btn btn-info" ng-click="print()">Print</a>
    <div class="report">
        <div class="zoom">
            <div class="row">

                <div class="col-md-2 col-sm-2 col-xs-2">
                    <img src="~/Content/Images/logo.jpg" style="float:right;width:100px;height:100px;">
                </div>

                <div class="col-md-8 col-sm-8 col-xs-8">
                    <h3 style="text-align:center;">অর্থ ও হিসাব পরিচালক অফিস</h3><br />
                    <h4 style="text-align:center;">বরিশাল বিশ্ববিদ্যালয়, বরিশাল</h4><br />

                </div>

                <div class="col-md-2 col-sm-2 col-xs-2" style="padding-right:10px">
                    <div style="border-style: solid;padding: 5px;">
                        <p style=" font-size:x-small;">
                            শিক্ষা নিয়ে গড়ব দেশ
                        </p>
                        <p style="font-size: x-small;">শেখ হাসিনার বাংলাদেশ</p>
                    </div>
                </div>

            </div>

            <div class="row">
                <h4 style="text-align:center;"> web: barisaluniv.edu.bd, barisaluniv.ac.bd, e-mail: s-bahadur77@yahoo.com</h4>
            </div>


            <hr />


            <div class="row">
                <div class="col-md-2 col-sm-6">

                </div>
                <div class="col-md-8">
                    <h4 style="text-align:center;">পে-স্লিপ</h4>
                </div>
            </div>



            <div class="row">

                <div class="col-md-2 col-sm-2 col-xs-1">


                </div>

                <div class="col-md-8 col-sm-8 col-xs-10">

                    <table class="table table-bordered">
                        <tr>
                            <td>আইডি নং</td>
                            <td>{{salary.SerialNo}}</td>

                        </tr>

                        <tr>
                            <td>নাম</td>
                            <td>{{salary.Name}}</td>

                        </tr>
                        <tr>
                            <td>পদবী</td>
                            <td>{{salary.Title}}</td>

                        </tr>
                        <tr>
                            <td>বিভাগ/ইন্সিটিউট/দপ্তর</td>
                            <td></td>

                        </tr>
                        <tr>
                            <td>যোগদানের তারিখ</td>
                            <td>{{salary.JoiningDate}}</td>

                        </tr>

                        <tr>
                            <td>বেতন স্কেল/ গ্রেড</td>
                            <td>{{salary.MainSalary}}</td>

                        </tr>

                        <tr>
                            <th colspan="2" align="center">প্রাপ্ত বেতন অ ভাতাদি</th>
                        </tr>

                        <tr>
                            <th>বিবরণ</th>
                            <th>পরিমান (টাকা)</th>

                        </tr>

                        <tr>
                            <td>মাসিক মূল বেতন</td>
                            <td>{{salary.PayableMainSalary}}</td>

                        </tr>
                        <tr>
                            <td colspan="2">ভাতাদি</td>


                        </tr>


                        <tr>
                            <td>বাড়ি ভাড়া ভাতা</td>
                            <td>{{salary.HouseRent}}</td>

                        </tr>
                        <tr>
                            <td>চিকিৎসা ভাতা</td>
                            <td>{{salary.MedicalAllowance}}</td>

                        </tr>
                        <tr>
                            <td>শিক্ষা সহায়তা ভাতা</td>
                            <td>{{salary.CurriculumAssitanceAllowance}}</td>

                        </tr>
                        <tr>
                            <td>প্রোক্টর/ সহকারি প্রোক্টর ভাতা</td>
                            <td>{{salary.AssistantProctorAllowance}}</td>

                        </tr>
                        <tr>
                            <td>ডীন/ চেয়ারম্যান/ প্রভোস্ট ভাতা</td>
                            <td>{{salary.DeanORChairmanOrProvostAllowance}}</td>

                        </tr>
                        <tr>
                            <td>অঃ দাঃ/ শিক্ষার্থী উপদেষ্টা ভাতা</td>
                            <td>{{salary.AdditionalDutiesOrStudentAdvisorAllowance}}</td>

                        </tr>
                        <tr>
                            <td>গবেষণা ভাতা</td>
                            <td>{{salary.ResearchAllowance}}</td>

                        </tr>
                        <tr>
                            <td>টেলিফোন ভাতা</td>
                            <td>{{salary.TelephoneAllowance}}</td>

                        </tr>
                        <tr>
                            <td>সমন্বয়</td>
                            <td>{{salary.Somonnoy}}</td>

                        </tr>
                        <tr>
                            <th align="center">সর্বমোট বেতন ও ভাতাদি</th>
                            <td>{{salary.Total}}</td>

                        </tr>
                        <tr>
                            <td colspan="2">কর্তনাদি</td>

                        </tr>
                        <tr>
                            <td>ভবিষ্যৎ তহবিল</td>
                            <td>{{salary.GPF}}</td>

                        </tr>
                        <tr>
                            <td>কল্যান তহবিল</td>
                            <td>{{salary.BF}}</td>

                        </tr>
                        <tr>
                            <td>পরিবহন</td>
                            <td>{{salary.TransportationAllowance}}</td>

                        </tr>
                        <tr>
                            <td>আয়কর</td>
                            <td>{{salary.IncomeTax}}</td>

                        </tr>
                        <tr>
                            <td>রেভিনিউ ষ্ট্যাম্প</td>
                            <td>{{salary.RevenueStamp}}</td>

                        </tr>
                        <tr>
                            <th align="center">সর্বমোট কর্তন (খ)</th>
                            <td>{{salary.TotalSubtraction}}</td>

                        </tr>
                        <tr>
                            <th align="center">নীট প্রদেয় (ক-খ)</th>
                            <td>{{salary.NeatSalary}}</td>

                        </tr>


                    </table>




                </div>
                <div class="col-md-2 col-sm-2 col-xs-1">


                </div>

            </div>
            <script src="~/Scripts/controller/reportByDate.js"></script>
            <script src="~/Scripts/service/baseService.js"></script>

        </div>
    </div>
</div>




