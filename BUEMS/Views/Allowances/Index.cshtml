@model IEnumerable<BUEMS.Models.Allowance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="departments" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DutyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowanceAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DutyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllowanceAmount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SerialNo }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SerialNo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SerialNo })
                </td>
            </tr>
        }
    </tbody>

</table>
