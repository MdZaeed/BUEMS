                else {
                    this.checked = false;
                };
            });
        });

        $(".Proctor").click(function () {
            selectedBoxB = this.id;

            $(".Proctor").each(function () {
                if (this.id == selectedBoxB) {
                    this.checked = true;
                }
                else {
                    this.checked = false;
                };
            });
        });
    });

</script>

