<script>
    var selectedBox = null;
    var selectedBoxA = null;
    var selectedBoxB = null;

    $(document).ready(function () {
        $(".Deans").click(function () {
            selectedBox = this.id;

            $(".Deans").each(function () {
                if (this.id == selectedBox) {
                    this.checked = true;
                }
                else {
                    this.checked = false;
                };
            });
        });

        $(".Provost").click(function () {
            selectedBoxA = this.id;

            $(".Provost").each(function () {
                if (this.id == selectedBoxA) {
