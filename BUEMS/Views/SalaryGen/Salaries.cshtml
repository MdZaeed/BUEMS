                         <option value="ফটোগ্রাফার">ফটোগ্রাফার</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-4 spandn">
                    <span>ডিপার্টমেন্ট</span>
                </div>
                <div class="col-md-8">
                     <select class="form-control" ng-model="selectedDepartment">
                         <option value="ইংরেজি">ইংরেজি</option>
                         <option value="গণিত">গণিত</option>
