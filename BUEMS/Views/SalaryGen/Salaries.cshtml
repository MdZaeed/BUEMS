                </div>
            </div>
            <div class="col-md-4">
                <input type="text" class="sbt" placeholder="Search" ng-model="search"/>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row" style="overflow:scroll; height:300px">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th ng-repeat="(key, value) in salaries[0]">
                            {{key}}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="salary in salaries | filter: search | filter: {Institute: selectedDepartment} : true | filter:{Title: selectedTitle} :true"">
                        <td ng-repeat="(key, value) in salary">
                            {{salary[key]}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div >
        <div id="zoom">
            <div class="row">
                <div class="col-md-4 col-xs-4">
                    <img src="~/Content/Images/logo.jpg" class="bulogo">
                </div>
